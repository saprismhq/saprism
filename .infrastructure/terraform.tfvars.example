# Saprism Infrastructure Configuration Example
# Copy this file to terraform.tfvars and customize for your deployment

# Basic Configuration
project_name = "saprism"
environment  = "production"  # or "staging", "development"
aws_region   = "us-east-1"

# Domain Configuration (Optional but recommended for production)
domain_name = "your-domain.com"  # Leave empty for ALB DNS only

# Application Configuration
app_port = 5000

# Database Configuration
db_instance_class = "db.t3.micro"  # Upgrade to db.t3.small or larger for production
db_name          = "saprism"
db_username      = "saprism_user"

# ECS Configuration
ecs_desired_count = 1      # Number of running tasks
ecs_cpu          = 256     # CPU units (256 = 0.25 vCPU)
ecs_memory       = 512     # Memory in MB

# Security Configuration
waf_rate_limit = 2000      # Requests per 5 minutes per IP

# Feature Flags
enable_vpc_endpoints = false   # Set to true for enhanced security (additional cost)
enable_cloudfront   = false   # Set to true if you need global CDN
enable_xray        = false   # Set to true for distributed tracing
enable_cicd        = false   # Set to true for automated deployments

# Monitoring Configuration
alert_email = "admin@your-domain.com"  # Email for CloudWatch alerts

# CI/CD Configuration (only needed if enable_cicd = true)
github_owner  = "your-github-username"
github_repo   = "saprism"
github_branch = "main"
github_token  = "your-github-personal-access-token"  # Keep this secret!

# Production Settings (uncomment for production)
# enable_deletion_protection = true
# multi_az = true
# backup_retention_period = 30
# performance_insights_enabled = true

# Social Login Configuration (optional)
enable_google_login   = false  # Set to true to enable Google OAuth
google_client_id      = ""     # Google OAuth client ID
google_client_secret  = ""     # Google OAuth client secret

enable_facebook_login = false  # Set to true to enable Facebook login
facebook_app_id       = ""     # Facebook App ID
facebook_app_secret   = ""     # Facebook App Secret

enable_apple_login    = false  # Set to true to enable Apple Sign In
apple_client_id       = ""     # Apple Service ID (client ID)
apple_team_id         = ""     # Apple Developer Team ID
apple_key_id          = ""     # Apple Sign In Key ID
apple_private_key     = ""     # Apple private key content (base64 or raw)

enable_amazon_login   = false  # Set to true to enable Amazon Login
amazon_client_id      = ""     # Amazon Login client ID
amazon_client_secret  = ""     # Amazon Login client secret

# Additional Tags (optional)
tags = {
  Owner       = "DevOps Team"
  Environment = "production"
  Project     = "Saprism"
  CostCenter  = "Engineering"
}